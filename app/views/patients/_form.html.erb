<% if @errors.present? %>
    <div class="errors">
        <ul>
            <%= @errors.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @patient do |form| %>
    <div class="form-control">
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name %>
        </div>
        <div class="form-group">
            <%= form.label :age %>
            <%= form.text_field :age %>
        </div>
        <div class="form-group">
            <%= form.label :phone %>
            <%= form.text_field :phone %>
        </div>
        <div class="form-group">
            <%= form.label :ailment %>
            <%= form.text_field :ailment %>
        </div>
        <div class="form-group">
            <%= form.label :appointment %>
            <%= date_field(:patient, :apointment) %>
        </div>
        <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, ["Initial Consultation", "Prescribed Medication", "Refered On", "Awaiting Follow Up", "Critical"] %>
        </div>
        <div class="form-group">
            <%= form.label :consultationType %>
            <%= form.select :consultationType, 
                [
                    "N/A",
                    "Inhouse-Clinic",
                    "St.James Hospital - X-Ray",
                    "Matter Private Dublin - Cardiology",
                    "Matter Private Cork - Neurology",
                    "Royal Eye and Ear - Ophthalmology",
                    "Temple Street - Children"
                ] 
            %>
        </div>
        <div class="actions">
            <%= form.submit %>
        </div>
    </div>
<% end %>