<% if @errors.present? %>
    <div class="errors">
        <ul>
            <%= @errors.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @patient do |form| %>
<div class="form-control">
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div class="form-group">
        <%= form.label :age %>
        <%= form.text_field :age %>
    </div>
    <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone %>
    </div>
    <div class="form-group">
        <%= form.label :ailment %>
        <%= form.text_field :ailment %>
    </div>
    <div class="form-group">
        <%= form.label :appointment %>
        <%= datetime_local_field(:patient, :apointment) %>
    </div>
    <div class="form-group">
        <%= form.label :status %>
        <%= form.select :status, ["Initial Consultation", "Prescribed Medication", "Refered On", "Awaiting Follow Up", "Critical"] %>

    </div>
    <div class="actions">
        <%= form.submit %>
    </div>
</div>
<% end %>